class Car {

	int i = 20;

	void steeringWheel() {
		System.out.println("inside steering Wheel of Car..."+i);
	}
	class Polo extends Car {

		int j = 10;

		void abs() {
			System.out.println("inside abs of Polo.."+i);
			System.out.println(j);//You can use variables of parent class anywhere in the child class...
		}
		Polo p = new Polo();
		p.abs();
		p.i = 23;
		p.j = 67;

	}